#panorama {
    width: 100vw;
    height: 100vh;

}


.circle {}

.circle::before {
    content: '';
    display: inline-block;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    animation: loop 1s linear infinite;
}


@keyframes loop {
    0% {
        transform: scale(0.5);
        background-color: #f00;

    }

    100% {
        transform: scale(1);
        background-color: #f50;
    }
}